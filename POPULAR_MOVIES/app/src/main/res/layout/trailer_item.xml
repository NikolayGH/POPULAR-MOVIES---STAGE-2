<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/trailerImageView"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginBottom="@dimen/middle_item_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/middle_item_margin"
        android:layout_marginTop="@dimen/middle_item_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/play_trailer_icon"
        android:contentDescription="@string/trailer_image" />

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/middle_item_margin"
        android:layout_marginEnd="@dimen/big_item_margin"
        android:layout_marginStart="@dimen/big_item_margin"
        android:layout_marginTop="@dimen/middle_item_margin"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trailerImageView"
        app:layout_constraintTop_toBottomOf="@+id/trailer_type"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/trailer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/middle_item_margin"
        android:layout_marginTop="@dimen/middle_item_margin"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/trailer_size"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/trailerImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trailer_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/middle_item_margin"
        android:layout_marginStart="@dimen/middle_item_margin"
        android:layout_marginTop="@dimen/middle_item_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/trailer_type"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>